<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@+drawable/title_red"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/showchinese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/showchinese" />

        <EditText
            android:id="@+id/searchword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="请输入想查询的单词"
            android:inputType="textMultiLine" />

    </RelativeLayout>

    <ExpandableListView
        android:id="@+id/elistview_search"
        android:layout_width="fill_parent"
        android:layout_height="366dp"
        android:layout_gravity="top"
        android:cacheColorHint="#00000000"
        android:background="@drawable/main_background"
        android:childDivider="@+drawable/list_separator_line"
        android:divider="@+drawable/list_separator_line"
        android:listSelector="#00000000" android:layout_weight="1.58">

        <!-- android:cacheColorHint="#00000000"这个设置可以去除拖动view时背景变成黑色的效果 -->


        <!-- android:listSelector="#00000000" >可以去除选中时的黄色底色 -->

    </ExpandableListView>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@+drawable/title_red"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >
  <!-- android:background="#00000000"这个设置是去除button的背景,显示为透明
  android:textColor="#FFFFFF" 设置字体颜色为白色,为什么@string/colors就报错-->

</RelativeLayout>
</LinearLayout>